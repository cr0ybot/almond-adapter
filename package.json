{
  "name": "almond-adapter",
  "display_name": "Securifi Almond",
  "version": "0.1.0",
  "description": "Unofficial Securifi Almond adapter plugin for Mozilla IoT Gateway",
  "author": "Cory Hughart",
  "license": "MPL-2.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "almond"
  ],
  "homepage": "https://github.com/cr0ybot/almond-adapter#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/cr0ybot/almond-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/cr0ybot/almond-adapter/issues"
  },
  "dependencies": {
    "ws": "^6.1.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.0"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "package.json",
    "almond-adapter.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "enabled": true,
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "AlmondLogin": {
        "ipAddress": "0.0.0.0",
        "username": "",
        "password": ""
      }
    },
    "schema": {
      "type": "object",
      "properties": {
        "AlmondLogin": {
          "type": "object",
          "description": "Almond web interface login",
          "properties": {
            "ipAddress": {
              "type": "string",
              "description": "IP address of the Almond router on the LAN"
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string",
              "ui:widget": "password"
            }
          },
          "required": [
            "ipAddress",
            "username",
            "password"
          ]
        }
      }
    }
  },
  "bundledDependencies": [
    "ws"
  ]
}
